    data.table = 'x_1383184_charityb_issues';
    data.groupBy = 'status'; // Replace 'field_name' with the actual field you want to group by
    
    var ga = new GlideAggregate(data.table);
    ga.setGroup(true);
    ga.groupBy(data.groupBy);
    ga.addAggregate('COUNT');
    ga.query();
    
    while (ga.next()) {
      data.summary.push({
        agName: ga[data.groupBy].getDisplayValue() || 'None', // Correct usage of getDisplayValue()
        agCount: ga.getAggregate('COUNT')
      });
    }
  }
  
  // Logging data to verify
  console.log(data);
})();

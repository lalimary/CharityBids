    <sp_widget action="DELETE">
        <category>custom</category>
        <client_script><![CDATA[api.controller = function($scope, spUtil) {
    var c = this;

    // Initialize data.categories
    c.data.categories = c.data.categories || [];

    // Function to filter items based on selected categories
    c.filterItems = function() {
        var selectedCategories = c.data.categories
            .filter(function(category) { return category.selected; })
            .map(function(category) { return category.sys_id; });

        spUtil.update($scope, {
            selectedCategories: selectedCategories
        });
    };

    // Function to handle resetting filters
    c.resetFilters = function() {
        c.data.categories.forEach(function(category) {
            category.selected = false;
        });
        c.filterItems(); // Trigger filtering with no categories selected
    };
};
]]></client_script>
